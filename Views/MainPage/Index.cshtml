@{
    ViewData["Title"] = "Home";
    Layout="_MainPageLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
</head>
<body>
    <div class="p-3 pb-md-4 mx-auto text-center mb-15">
        <div class="display-4 msgConvert">Sube los archivos que</div>
        <div class="display-4 msgConvert">quieres convertir</div>
    </div>  
    <div class="row justify-content-center row-cols-3 row-cols-md-2 mb-2 text-center ">
        <div class="card-container">
            <div class="card mb-4 card-box">
                <div class="card-body d-flex flex-column justify-content-center align-items-center"> 
                    <i class="fa-solid fa-cloud-arrow-up cloud-icon fa-flip-horizontal"></i>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li class="msg-upload" >Arrastra y sube los archivos aqu√≠</li>
                    </ul>
                    <button type="button" class="w-50 btn btn-primary btnFiles rounded-4">Buscar archivos</button>
                </div>
            </div>
            <div class="linea">
                <div class="circulo"></div>
            </div>
            <span class="msgLinks msg-upload msg-convert-links">Ingresa los links a convertir</span>
            <div class="input-group mb-3 inputLinks">
                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div> 
        </div> 
    </div>
</body>
</html>
