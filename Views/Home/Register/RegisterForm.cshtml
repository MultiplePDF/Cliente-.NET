@{
    ViewData["Title"] = "Register Form";
    Layout="/Views/Home/_HomeLayout.cshtml";
}
@model UserModel
<div class="register-form-container">
    <form method="POST" asp-controller="Auth" asp-action="RegisterService">
        <span class="register-title">Registro</span>
        <span class="register-text-small">Regístrate ahora para utilizar todas 
            las funciones de nuestra plataforma</span>

        <div class="form-group form-group-first">
            <label class="label" for="username">Nombre de usuario:</label>
            <br>
            <input class="form-input" type="text" id="username" name="Username" required> 
            @Html.ValidationMessageFor(m=>m.Username)
        </div>
        <div class="form-group">
            <label class="label" for="email">Email:</label>
            <br>
            <input class="form-input" type="email" id="email" name="Email" required>
            @Html.ValidationMessageFor(m=>m.Email)
        </div>
        <div class="form-group">
            <label class="label" for="password">Contraseña:</label>
            <br>
            <input class="form-input" type="password" id="password" name="Password" required>
            @Html.ValidationMessageFor(m=>m.Password)
        </div>
        <div class="form-group">
            <label class="label" for="confirm-password">Confirmar contraseña:</label>
            <br>
            <input class="form-input" type="password" id="confirmPassword" name="ConfirmPassword" required>
            @Html.ValidationMessageFor(m=>m.ConfirmPassword)
        </div>

        <button class="register-button" type="submit">Registrarse</button>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div>
                <br>
                <span class="error-register">@ViewData["ErrorMessage"]</span>
            </div>
        }

        <div class="login-message">
            ¿Ya tienes una cuenta? <a href="/Home/Index" class="msg-login-now">¡Inicia sesión!</a>
        </div>
    </form>
</div>